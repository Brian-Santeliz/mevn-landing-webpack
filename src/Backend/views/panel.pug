extends ./layout/index
block contenido
    .container.d-flex.justify-content-center
        .row
            .col-md-12
                .container.text-center.mt-4
                    if(mensaje)
                        p.alert.alert-success.text-uppercase.my-3 #{mensaje}
                    if(error)
                        p.alert.alert-danger.text-uppercase.my-3 #{error}
                    h3 #{titulo}
                    p.mb-2 #{parrafo}
                    form(class="mt-4 mb-4 form-servicios" action="/services/backend" method="POST")
                        .form-group 
                            label(for="titulo" class="float-left d-3") Agrega un titulo:
                            input(class="form-control", name="titulo", id="titulo",  placeholder="Escribe el titulo del servicio", required)
                            label(for="icono" class="float-left d-3") Agrega un icono:
                            input(class="form-control", id="icono" name="clase" requerid placeholder="Escribe clase del icono. Ej: lni-pencil" required)
                            label(for="descripcion" class="float-left d-3") Agrega una descripcion:
                            textarea(name="descripcion", id="descripcion" rows="3", class="form-control", required placeholder="Describe el Servicio...")
                            input(type="submit", value="Agregar servicio" class="btn btn-info btn-block")
    