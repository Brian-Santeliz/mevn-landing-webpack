extends ./layout/index
block contenido
    include includes/navigator
    .container.d-flex.justify-content-center
        .row
            .col-md-12
                .container.text-center.mt-4
                    h3 Agrega Nuevos Servicios
                    p.mb-2 Esto se vera reflejado en el Frontend de Smart Tech
                    form(class="mt-4 mb-4 form-servicios")
                        .form-group 
                            label(for="titulo" class="float-left d-3") Agrega un titulo:
                            input(class="form-control" id="titulo" placeholder="Escribe el titulo del servicio")
                            label(for="icono" class="float-left d-3") Agrega un icono:
                            input(class="form-control" id="icono" placeholder="Escribe clase del icono. Ej: lni-pencil")
                            label(for="descripcion" class="float-left d-3") Agrega una descripcion:
                            textarea(name="", id="descripcion" rows="3", class="form-control", placeholder="Describe el Servicio...")
                            button.btn.btn-info.btn-block Agregar servicio